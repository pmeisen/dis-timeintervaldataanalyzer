<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
  <import resource="classpath:/net/meisen/dissertation/config/tida-bean-exceptions.xml"/>

  <bean id="descriptorsFactoryWithIntegerIds" class="net.meisen.dissertation.data.impl.descriptors.DescriptorsFactory">
    <constructor-arg type="net.meisen.dissertation.models.IIdsFactory">
      <bean class="net.meisen.dissertation.data.impl.idfactories.IntegerIdsFactory" />
    </constructor-arg>
    <constructor-arg type="java.util.Map">
      <map key-type="java.lang.Class" value-type="java.lang.Class">
        <entry key="java.lang.Double" 
               value="net.meisen.dissertation.data.impl.descriptors.DoubleDescriptor" />
        <entry key="java.lang.Long" 
               value="net.meisen.dissertation.data.impl.descriptors.LongDescriptor" />
        <entry key="java.lang.Integer" 
               value="net.meisen.dissertation.data.impl.descriptors.IntegerDescriptor" />
        <entry key="java.lang.Object" 
               value="net.meisen.dissertation.data.impl.descriptors.GeneralDescriptor" />
      </map>
    </constructor-arg>
  </bean>
</beans>